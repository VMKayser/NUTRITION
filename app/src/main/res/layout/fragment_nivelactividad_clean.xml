<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.Perfil.NivelActividad.NivelActividadFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- TÍTULO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nivel_actividad_titulo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- DESCRIPCIÓN -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nivel_actividad_descripcion"
            android:textSize="14sp"
            android:textColor="#888888"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="30dp" />

        <!-- OPCIÓN SEDENTARIO -->
        <LinearLayout
            android:id="@+id/layout_sedentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/nivel_actividad_normal"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nivel_sedentario"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_sedentario"
                android:textSize="14sp"
                android:textColor="#888888" />

        </LinearLayout>

        <!-- OPCIÓN MODERADO -->
        <LinearLayout
            android:id="@+id/layout_moderado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/nivel_actividad_seleccionado"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nivel_moderado"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_moderado"
                android:textSize="14sp"
                android:textColor="#888888" />

        </LinearLayout>

        <!-- OPCIÓN ACTIVO -->
        <LinearLayout
            android:id="@+id/layout_activo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/nivel_actividad_normal"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nivel_activo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_activo"
                android:textSize="14sp"
                android:textColor="#888888" />

        </LinearLayout>

        <!-- OPCIÓN MUY ACTIVO -->
        <LinearLayout
            android:id="@+id/layout_muy_activo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/nivel_actividad_normal"
            android:padding="16dp"
            android:layout_marginBottom="40dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nivel_muy_activo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_muy_activo"
                android:textSize="14sp"
                android:textColor="#888888" />

        </LinearLayout>

        <!-- BOTÓN GUARDAR -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_guardar_nivel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/guardar_nivel"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_cyan"
            android:textAllCaps="false"
            android:elevation="3dp"
            style="@style/Widget.AppCompat.Button.Borderless" />

    </LinearLayout>
</ScrollView>
