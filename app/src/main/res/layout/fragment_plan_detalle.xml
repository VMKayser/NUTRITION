<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Imagen del plan -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/iv_plan_detalle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:contentDescription="Imagen del plan" />

        </androidx.cardview.widget.CardView>

        <!-- Título del plan -->
        <TextView
            android:id="@+id/tv_titulo_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plan de Comidas"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Descripción -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_descripcion_detalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción del plan de comidas"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Información nutricional -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Información del Plan"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Calorías promedio:"
                        android:textSize="16sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tv_calorias_detalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000 kcal"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Duración:"
                        android:textSize="16sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tv_duracion_detalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 semanas"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Objetivo:"
                        android:textSize="16sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tv_objetivo_detalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="General"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Características del plan -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_caracteristicas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Características"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_caracteristicas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="3"
                    tools:listitem="@android:layout/simple_list_item_1" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botón de acción -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ver_recetas"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="Ver Recetas del Plan"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#2E7D32"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_view"
            app:iconGravity="start"
            app:iconPadding="8dp" />

    </LinearLayout>

</ScrollView>
