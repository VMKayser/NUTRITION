<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    tools:context=".ui.Progreso.ProgresoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Progreso de los planes"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Tarjeta principal de progreso -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Sección de días -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Días"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Día 1 -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp">

                            <View
                                android:id="@+id/circle_dia_1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/circle_shape" />

                            <ImageView
                                android:id="@+id/check_dia_1"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_check"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:id="@+id/text_dia_1" />
                        </FrameLayout>

                        <!-- Día 2 -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp">

                            <View
                                android:id="@+id/circle_dia_2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/circle_shape" />

                            <ImageView
                                android:id="@+id/check_dia_2"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_check"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:id="@+id/text_dia_2" />
                        </FrameLayout>

                        <!-- Día 3 -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp">

                            <View
                                android:id="@+id/circle_dia_3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/circle_shape" />

                            <ImageView
                                android:id="@+id/check_dia_3"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_check"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:id="@+id/text_dia_3" />
                        </FrameLayout>

                        <!-- Día 4 -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp">

                            <View
                                android:id="@+id/circle_dia_4"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/circle_shape_gray" />

                            <ImageView
                                android:id="@+id/check_dia_4"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_check"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:textColor="#757575"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:id="@+id/text_dia_4" />
                        </FrameLayout>

                        <!-- Día 5 -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1">

                            <View
                                android:id="@+id/circle_dia_5"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/circle_shape_gray" />

                            <ImageView
                                android:id="@+id/check_dia_5"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_check"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textColor="#757575"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:id="@+id/text_dia_5" />
                        </FrameLayout>

                    </LinearLayout>
                </LinearLayout>

                <!-- Sección de comidas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Desayuno -->
                    <LinearLayout
                        android:id="@+id/layout_desayuno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_background"
                        android:padding="16dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/check_desayuno"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_circle"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Desayuno"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2" />
                    </LinearLayout>

                    <!-- Almuerzo -->
                    <LinearLayout
                        android:id="@+id/layout_almuerzo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_background"
                        android:padding="16dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/check_almuerzo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_circle"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Almuerzo"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2" />
                    </LinearLayout>

                    <!-- Cena -->
                    <LinearLayout
                        android:id="@+id/layout_cena"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_background"
                        android:padding="16dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/check_cena"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_check_circle"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cena"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Sección de agua -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingesta de agua"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">                        <!-- Vasos de agua -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">                            <TextView
                                android:id="@+id/vaso1"
                                android:layout_width="36dp"
                                android:layout_height="40dp"
                                android:text="🥤"
                                android:textSize="28sp"
                                android:gravity="center"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/vaso2"
                                android:layout_width="36dp"
                                android:layout_height="40dp"
                                android:text="🥤"
                                android:textSize="28sp"
                                android:gravity="center"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/vaso3"
                                android:layout_width="36dp"
                                android:layout_height="40dp"
                                android:text="🥤"
                                android:textSize="28sp"
                                android:gravity="center"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/vaso4"
                                android:layout_width="36dp"
                                android:layout_height="40dp"
                                android:text="🥤"
                                android:textSize="28sp"
                                android:gravity="center"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/vaso5"
                                android:layout_width="36dp"
                                android:layout_height="40dp"
                                android:text="🥛"
                                android:textSize="28sp"
                                android:gravity="center"
                                android:alpha="0.4"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/vaso6"
                                android:layout_width="36dp"
                                android:layout_height="40dp"
                                android:text="🥛"
                                android:textSize="28sp"
                                android:gravity="center"
                                android:alpha="0.4" />
                        </LinearLayout>

                        <!-- Contador y botones -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/contador_agua"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4/6"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#2196F3"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="8dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">                                <ImageButton
                                    android:id="@+id/btn_add_agua"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@android:drawable/ic_input_add"
                                    android:background="?android:attr/selectableItemBackgroundBorderless"
                                    android:scaleType="fitCenter"
                                    android:padding="6dp"
                                    android:layout_marginBottom="4dp" />

                                <ImageButton
                                    android:id="@+id/btn_remove_agua"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@android:drawable/ic_delete"
                                    android:background="?android:attr/selectableItemBackgroundBorderless"
                                    android:scaleType="fitCenter"
                                    android:padding="6dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>