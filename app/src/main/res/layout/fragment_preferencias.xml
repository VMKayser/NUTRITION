<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="24dp">

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configurar Preferencias"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Tipos de Dieta -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de Dieta"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupTiposDieta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="false" />

        </LinearLayout>

        <!-- Objetivos/Metas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Objetivo"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupObjetivos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="false" />

        </LinearLayout>

        <!-- Nivel de Actividad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nivel de Actividad"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupNivelActividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSedentario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sedentario"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLigero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ligero"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipModerado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moderado"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipIntenso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intenso"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMuyIntenso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muy Intenso"
                    android:checkable="true" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

        <!-- Preferencias de Nutrición -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distribución de Macronutrientes"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Proteínas -->
            <TextView
                android:id="@+id/tvProteinas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proteínas: 25%"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderProteinas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="10"
                android:valueTo="50"
                android:value="25"
                android:stepSize="1"
                android:layout_marginBottom="16dp" />

            <!-- Carbohidratos -->
            <TextView
                android:id="@+id/tvCarbohidratos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carbohidratos: 50%"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderCarbohidratos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="20"
                android:valueTo="70"
                android:value="50"
                android:stepSize="1"
                android:layout_marginBottom="16dp" />

            <!-- Grasas -->
            <TextView
                android:id="@+id/tvGrasas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grasas: 25%"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderGrasas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="15"
                android:valueTo="40"
                android:value="25"
                android:stepSize="1"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Peso Objetivo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peso Objetivo (kg)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Peso objetivo en kg"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPesoObjetivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSincronizar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sincronizar"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guardar"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
