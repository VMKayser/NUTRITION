<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.Perfil.PreferenciasNutricion.PreferenciasNutricionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- TÍTULO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preferencias de nutrición"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />        <!-- DESCRIPCIÓN -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/preferencias_nutricion_descripcion"
            android:textSize="14sp"
            android:textColor="#888888"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="30dp" />

        <!-- PLAN DE DIETA -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plan de Dieta"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <Spinner
            android:id="@+id/spinner_plan_dieta"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"
            android:paddingStart="16dp"
            android:paddingEnd="40dp"
            android:layout_marginBottom="30dp" />

        <!-- OBJETIVO DE MACRONUTRIENTES -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Objetivo de Macronutrientes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- FILA DE MACRONUTRIENTES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <!-- PROTEÍNAS -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proteínas (%)"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />                <EditText
                    android:id="@+id/et_proteinas"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_porcentaje"
                    android:textSize="16sp"
                    android:textColorHint="#CCCCCC"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/input_border"
                    android:inputType="number"
                    android:gravity="center" />

            </LinearLayout>

            <!-- CARBOHIDRATOS -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carbohidratos (%)"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />                <EditText
                    android:id="@+id/et_carbohidratos"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_porcentaje"
                    android:textSize="16sp"
                    android:textColorHint="#CCCCCC"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/input_border"
                    android:inputType="number"
                    android:gravity="center" />

            </LinearLayout>

            <!-- GRASAS -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grasas (%)"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />                <EditText
                    android:id="@+id/et_grasas"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_porcentaje"
                    android:textSize="16sp"
                    android:textColorHint="#CCCCCC"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:background="@drawable/input_border"
                    android:inputType="number"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- ALERGIAS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alergias"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />        <EditText
            android:id="@+id/et_alergias"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_alergias"
            android:textSize="16sp"
            android:textColorHint="#CCCCCC"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/input_border"
            android:inputType="text"
            android:layout_marginBottom="30dp" />

        <!-- ALIMENTOS FAVORITOS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alimentos favoritos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />        <EditText
            android:id="@+id/et_alimentos_favoritos"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_alimentos_favoritos"
            android:textSize="16sp"
            android:textColorHint="#CCCCCC"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/input_border"
            android:inputType="text"
            android:layout_marginBottom="40dp" />

        <!-- BOTÓN GUARDAR PREFERENCIAS -->        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_guardar_preferencias"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/btn_guardar_preferencias"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_cyan"
            android:textAllCaps="false"
            android:elevation="3dp"
            style="@style/Widget.AppCompat.Button.Borderless" />

    </LinearLayout>
</ScrollView>