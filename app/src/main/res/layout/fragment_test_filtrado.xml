<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧪 Test de Filtrado de Recetas"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Descripción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Utiliza este panel para probar que el filtrado por tipo de dieta funciona correctamente. Cada receta debería aparecer solo en su dieta específica."
            android:textSize="14sp"
            android:textColor="#666666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="20dp" />

        <!-- Card de filtros -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🎯 Filtros"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="16dp" />

                <!-- Tipo de Dieta -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Dieta:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#555555"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinner_tipo_dieta_test"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:layout_marginBottom="16dp" />

                <!-- Rango de Calorías -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rango de Calorías:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#555555"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <EditText
                        android:id="@+id/et_calorias_min_test"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Mín. calorías"
                        android:inputType="number"
                        android:background="@drawable/input_border"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/et_calorias_max_test"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Máx. calorías"
                        android:inputType="number"
                        android:background="@drawable/input_border"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- Botones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_filtrar_test"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="🔍 Filtrar"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_cyan"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.AppCompat.Button.Borderless" />

                    <Button
                        android:id="@+id/btn_limpiar_test"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="🗑️ Limpiar"
                        android:textColor="#666666"
                        android:background="@drawable/button_outline"
                        android:layout_marginStart="8dp"
                        style="@style/Widget.AppCompat.Button.Borderless" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Indicador de carga -->
        <ProgressBar
            android:id="@+id/progress_bar_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Texto de resultados -->
        <TextView
            android:id="@+id/tv_resultados_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Utiliza los filtros para buscar recetas"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Lista de resultados -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📋 Recetas Encontradas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_recetas_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@android:layout/simple_list_item_2" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Información de debug -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Debug Tip: Revisa los logs de Android (Logcat) con el filtro 'DEBUG TestFiltrado' para ver información detallada sobre las consultas y resultados."
            android:textSize="12sp"
            android:textColor="#888888"
            android:background="#F0F0F0"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

</ScrollView>
