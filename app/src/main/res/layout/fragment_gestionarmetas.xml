<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".ui.Perfil.GestionarMetas.GestionarMetasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">        <!-- TÍTULO Y DESCRIPCIÓN -->
        <TextView
            android:id="@+id/tv_titulo_principal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gestion_metas_titulo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gestion_metas_descripcion"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="30dp" /><!-- TARJETA DE OBJETIVO ACTUAL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="24dp"
            android:layout_marginBottom="25dp"
            android:elevation="4dp">            <!-- Título del objetivo -->
            <TextView
                android:id="@+id/tv_objetivo_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_objetivo_actual"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- Peso objetivo y actual -->
            <TextView
                android:id="@+id/tv_peso_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_peso_objetivo"
                android:textSize="14sp"
                android:textColor="#888888"
                android:layout_marginBottom="20dp" />            <!-- Barra de progreso -->
            <ProgressBar
                android:id="@+id/progress_objetivo"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:progress="0"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_custom"
                android:layout_marginBottom="12dp" />

            <!-- Porcentaje completado -->
            <TextView
                android:id="@+id/tv_porcentaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_porcentaje_completado"
                android:textSize="13sp"
                android:textColor="#888888"
                android:gravity="end"
                android:layout_marginBottom="20dp" />

            <!-- Botón Editar Objetivo -->
            <TextView
                android:id="@+id/btn_editar_objetivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar Objetivo"
                android:textSize="15sp"
                android:textColor="#00BCD4"
                android:textStyle="bold"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp" />

        </LinearLayout>

        <!-- HITOS DEL OBJETIVO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hitos del objetivo:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="20dp" />

        <!-- Lista de hitos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">            <!-- Hito 1 - Completado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="18dp"><CheckBox
                    android:id="@+id/cb_hito1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:buttonTint="#00BCD4"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_marginEnd="16dp" /><TextView
                    android:id="@+id/tv_hito1_texto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bajar los primeros 5 kilos"
                    android:textSize="16sp"
                    android:textColor="#000000" />

            </LinearLayout>            <!-- Hito 2 - No completado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="18dp"><CheckBox
                    android:id="@+id/cb_hito2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:buttonTint="#CCCCCC"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tv_hito2_texto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mantener el peso por una semana"
                    android:textSize="16sp"
                    android:textColor="#000000" />

            </LinearLayout>            <!-- Hito 3 - No completado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="18dp"><CheckBox
                    android:id="@+id/cb_hito3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:buttonTint="#CCCCCC"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_marginEnd="16dp" />
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tv_hito3_texto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alcanzar Racha de 7 días"
                    android:textSize="16sp"
                    android:textColor="#000000" />

            </LinearLayout>

        </LinearLayout>        <!-- BOTÓN AGREGAR NUEVO OBJETIVO -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_agregar_objetivo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/agregar_nuevo_objetivo"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_cyan"
            android:textAllCaps="false"
            android:elevation="3dp"
            style="@style/Widget.AppCompat.Button.Borderless" />

    </LinearLayout>
</ScrollView>